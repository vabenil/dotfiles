[module/title]
type = custom/script
exec = xdotool getwindowfocus getwindowname | ~/scripts/scroll.py -m 70 -i %counter% --read-from-stdin
interval = 0.3

format = <label>
label = %output%


[module/title2]
type = custom/script
exec = xdotool getwindowfocus getwindowname | ~/scripts/scroll_noargs.py 70 %counter% --read-from-stdin
interval = 0.3

format = <label>
label = %output%


