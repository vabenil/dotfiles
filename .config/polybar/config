background     = #aa222222
background-alt = #4D4D4D
;foreground    = ${xrdb:color7:#222}
foreground     = #dfdfdf
foreground-alt = #555
primary        = #ffb52a
secondary      = #e60053
alert          = #bd2c40

[bar/main]
monitor = eDP-1
width = 100%
height = 29
offset-x = 1%
offset-y = 1%
fixed-center = false
; bottom = true

