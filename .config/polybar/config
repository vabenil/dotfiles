[module/title]
type = custom/script
exec = ~/.config/i3/scripts/scroll.py 90 %counter%
interval = 0.25

format = <label>
label = %output%

[module/f_mark]
type = custom/script
exec = ~/.config/i3/scripts/focused_mark.py
interval = 0.5
format-foreground = ${colors.yellow}
format-font = 3

[module/marks]
type = custom/script
exec = ~/.config/i3/scripts/get_marks.py
format-padding = 1
interval = 0.5


