[colors]
;background    = ${xrdb:color0:#222}
blue           = "#378486"
white          = "#e8e8e8"
light-grey     = "#A6A6A6"
light          = "#dad8d8"
black          = "#000000"
yellow         = #FFC800
background     = #aa222222
background-alt = #4D4D4D
;foreground    = ${xrdb:color7:#222}
foreground     = #dfdfdf
foreground-alt = #555
primary        = #ffb52a
secondary      = #e60053
alert          = #bd2c40

[bar/main]
monitor = eDP-1
width = 100%
height = 29
offset-x = 1%
offset-y = 1%
fixed-center = false
; bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

